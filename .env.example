# CleanBuddy Backend Environment Variables
# Copy this file to .env and fill in the values

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/cleanbuddy?sslmode=disable

# ==========================================
# Redis Configuration
# ==========================================
# Redis connection URL for caching and rate limiting
# Format: redis://host:port or redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ==========================================
# Server Configuration
# ==========================================
# Server port (default: 8080)
PORT=8080

# Path to YAML configuration file (default: config/config.yaml)
CONFIG_PATH=config/config.yaml

# Environment mode: development, staging, production
ENV=development

# ==========================================
# Authentication & Security
# ==========================================
# JWT secret key for signing tokens (use strong random string in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption key for PII data (IBAN, CNP) - must be 32 bytes base64 encoded
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-encryption-key-base64-encoded

# ==========================================
# Email Service Configuration
# ==========================================
# Email API key (for transactional emails)
EMAIL_API_KEY=your-email-api-key

# Alternative: Sidemail API key (legacy fallback)
# SIDEMAIL_API_KEY=your-sidemail-api-key

# Email sender information
EMAIL_FROM_ADDRESS=noreply@cleanbuddy.ro
EMAIL_FROM_NAME=CleanBuddy

# ==========================================
# Google Services
# ==========================================
# Google Maps API key for geocoding and address validation
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Path to Google Cloud service account credentials JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ==========================================
# ANAF e-Factura Integration
# ==========================================
# ANAF e-Factura API credentials (for Romanian invoice submission)
# ANAF_CLIENT_ID=your-anaf-client-id
# ANAF_CLIENT_SECRET=your-anaf-client-secret

# ==========================================
# Netopia Payment Gateway (Romania)
# ==========================================
# Netopia payment processor credentials
# NETOPIA_API_KEY=your-netopia-api-key
# NETOPIA_POS_SIGNATURE=your-netopia-pos-signature
# NETOPIA_MERCHANT_ID=your-netopia-merchant-id

# Path to Netopia public key certificate for encryption
# NETOPIA_PUBLIC_KEY_PATH=/path/to/netopia-public-key.pem

# Netopia webhook URLs (must be publicly accessible)
# NETOPIA_NOTIFY_URL=https://api.cleanbuddy.ro/payment/notify
# NETOPIA_REDIRECT_URL=https://cleanbuddy.ro/payment/return

# ==========================================
# GCP Cloud Storage (for file uploads)
# ==========================================
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_BUCKET_NAME=cleanbuddy-uploads

# ==========================================
# Development & Testing
# ==========================================
# Set to true to enable development mode features
# - OTP bypass with code "123456"
# - Skips email sending in development
# - Skips geocoding API calls
DEV_MODE=true
